/* pages/video/video.wxss */
.film {
    padding-top: 12px;
}
.film .video-item {
    position: relative;
    margin-bottom: 24px;
}
.film .video-item .videoWrap {
    margin-bottom: 18px;
    width: 100%;
    height: 375rpx;
}
.film .video-item video {
   width: 100%;
   height: 375rpx;
}
.film .video-item image {
    width: 100%;
    height: 375rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 15;
}
.film .video-item .videoName {
    text-align: center;
    margin-bottom: 12px;
    color: #363636;
}
.film .video-item .videoAddress {
    text-align: center;
    margin-bottom: 23px;
    color:#a1a1a1;
    font-size: 16px;
}
.film .video-item .videoIntro {
    font-size: 16px;
    line-height: 20px;
    color:#a1a1a1;
}